@model Forum.Models.User

@{
    ViewBag.Title = "Create User";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/assets/css/createUser.css">

<div class="user-container">
    @using (Html.BeginForm("Create", "Users", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-user" style="padding-top:100px">
            <h4>Thêm tài khoản</h4>
            <hr />
            @if (@ViewBag.Message != null || @ViewBag.Message != "")
            {
                <h4 style="color: red">@ViewBag.Message</h4>
            }
            <div id="main-wrapper" class="container-edit">
                <div class="form-group">
                    Tên tài khoản
                    @Html.EditorFor(model => model.user_name, new { htmlAttributes = new { @class = "form-control" } })
                    <p>@Html.ValidationMessageFor(model => model.user_name, "", new { @class = "text-danger" })</p>
                </div>
                <div class="form-group">
                    Mật khẩu
                    @Html.PasswordFor(model => model.pass, new { htmlAttributes = new { @class = "form-control" } })
                    <p> @Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger" })</p>
                </div>

                <div class="form-group">
                    Tên người dùng
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    <p>@Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })</p>
                </div>
                <div class="formgroup">
                    <div class="formgrp-isadmin">
                        Role Admin
                        <div class="row">
                            @Html.EditorFor(model => model.role, new { htmlAttributes = new { @class = "form-control icon-checkbox" } })

                            <span style="line-height: 45px; margin-left: 10px; font-size: medium; color:#ccc">Chọn là admin, không chọn là người dùng</span>
                        </div>
                        <p>@Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger" })</p>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Tạo tài khoản" class="btn btn-success" />

                </div>
            </div>
        </div>

        <div class="col-12 float-right btn-BackToList">
            @Html.ActionLink("Trở về trang trước", "Index", "", htmlAttributes: new { @class = "btn btn-secondary" })
        </div>

    }
</div>


    