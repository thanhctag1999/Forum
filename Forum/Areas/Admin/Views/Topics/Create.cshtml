@model Forum.Models.Topic

@{
    ViewBag.Title = "Create Topic";
}


<div class="container list-topics mb-5">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h2>Thêm đề tài</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto">
            <div class="form-group">
                Tên đề tài
                @Html.EditorFor(model => model.topic_name, new { htmlAttributes = new { @class = "form-control mb-3", @placeholder = Html.DisplayNameFor(x => x.topic_name) } })
                @Html.ValidationMessageFor(model => model.topic_name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                Trạng thái
                @Html.DropDownListFor(model => model.flag,
                    new List<SelectListItem> {
                        new SelectListItem { Text = "Hoạt động", Value = "1" },
                        new SelectListItem { Text = "Đã xóa", Value = "0" } },
                    new { @class = "form-control mb-3", @placeholder = Html.DisplayNameFor(x => x.flag) })
                @Html.ValidationMessageFor(model => model.flag, "", new { @class = "text-danger" })
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @Html.Raw(ViewBag.Error)
                </div>
            }
            <div class="form-group">
                <button type="submit" class="btn btn-primary mr-2">Thêm đề tài</button>
                @Html.ActionLink("Hủy", "Index", new object { }, new { @class = "btn btn-light" })
            </div>
        </div>
        </div>
    }
</div>